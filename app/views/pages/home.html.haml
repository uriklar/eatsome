.starter-tempate{ 'ng-controller' => 'AppCtrl'}

	#page-title.panel.panel-default
		%h1 Welcome to Eat Some
		%p.lead Your one stop shop for healthy nutrition

	%h2 Parameters:
	%span Total calories
	%input{'ng-model' => 'totalCalories' }
	%span Weight
	%input{'ng-model' => 'weight' }

	%h2 Recommendations:
	%p
		%span Carbs: {{recommendedValues.carbohydrate()}}
	%p
		%span Protein:  {{recommendedValues.protein()}}

	%h4 Select from list of ingredients:
	%ul#ingredient-list
		%li{ 'ng-repeat' => 'ingredient in visibleIngredients()', class: "{{sizeClass(ingredient.num_selected)}}", 'ng-click' => 'addToChosen(ingredient)'}
			{{ingredient.name}}

	%h4 Select from list of dishes:
	%ul#dish-list
		%li{ 'ng-repeat' => 'dish in visibleDishes()', class: "{{sizeClass(dish.num_selected)}}",'ng-click' => 'addToChosen(dish)'}
			{{dish.name}}

	%ul#chosen-list.well
		%li{ 'ng-repeat' => 'item in chosenItems'}
			{{item.name}}


